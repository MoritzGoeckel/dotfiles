{
    "workbench.colorTheme": "plain-dark",
    "workbench.iconTheme": null,
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",
    //"C_Cpp.intelliSenseEngine": "Default",
    //"C_Cpp.intelliSenseEngineFallback": "Enabled",
    //"editor.formatOnSave": true,
    "editor.defaultFormatter": "xaver.clang-format",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    //"[python]": {
    //    "editor.formatOnSave": false,
    //},
    //"[cpp]": {
    //    "editor.formatOnSave": true,
    //},
    //"[c]": {
    //    "editor.formatOnSave": true,
    //},
    //"C_Cpp.clang_format_fallbackStyle": "Visual Studio",
    "AllAutocomplete.updateOnlyOnSave": false,
    "editor.tabCompletion": "on",
    "editor.suggest.localityBonus": true,
    "editor.suggestSelection": "recentlyUsed",
    "editor.wordBasedSuggestions": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.minimap.showSlider": "always",
    // Never close brackets / quotes automatically
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    //"clang-format.executable": "../clang_format",
    "workbench.colorCustomizations": {
        "minimap.findMatchHighlight": "#bb5d5d",
        "minimap.selectionHighlight": "#bb5d5d",
        "minimapSlider.background": "#bb5d5d1e",
        "minimapSlider.hoverBackground": "#bb5d5d1e",
        "minimapSlider.activeBackground": "#bb5d5d52",
        "statusBar.background": "#1A1A1A",
        "editor.background": "#1A1A1A",
        "activityBar.background": "#1A1A1A",
        //"statusBar.noFolderBackground": "#212121",
        //"statusBar.debuggingBackground": "#263238",
        "editor.selectionBackground": "#555",
        "editor.selectionForeground": "#000",
        "editor.selectionHighlightBackground": "#444",
        "editor.findMatchHighlightBackground": "#444",
        //"editor.findMatchBackground": "#ff0000",
        "editor.lineHighlightBackground": "#1A1A1A",
        "editorLineNumber.foreground": "#444",
        "editorLineNumber.activeForeground": "#999"
    },
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": true,
    "workbench.list.smoothScrolling": true,
    "breadcrumbs.enabled": true,
    "editor.renderLineHighlight": "all",
    "terminal.integrated.fontFamily": "Consolas",
    //"editor.fontFamily": "Fixedsys Excelsior 3.01", // Use 8*X fontSize
    //"editor.fontFamily": "IBM Plex Mono Medium",
    "editor.fontFamily": "JetBrains Mono",
    //"editor.fontFamily": "Fira Code",
    //"editor.fontWeight": "400",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    // Syntax customization
    // Using theme: plain-dark
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "support.type"
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#D7D5D1"
                }
            },
            {
                "scope": [
                    "keyword.control",
                ],
                "settings": {
                    "foreground": "#bb5d5d",
                }
            },
            {
                "scope": [
                    "comment",
                    "storage.modifier",
                    "string",
                    "string.quoted.double.cpp",
                    "constant.language",
                    "constant.numeric",
                    "keyword.control.directive.include.cpp"
                ],
                // Do not make strings italic
                "settings": {
                    "foreground": "#d7d5d180",
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "storage.modifier.pointer",
                    "storage.modifier.reference"
                ],
                "settings": {
                    "foreground": "#bb5d5d",
                }
            },
            {
                "scope": [
                    "storage.type",
                ],
                "settings": {
                    "foreground": "#d7d5d18a",
                }
            },
            {
                "scope": [
                    "variable",
                    "variable.parameter.cpp",
                ],
                "settings": {
                    "foreground": "#d7d5d1b7",
                }
            },
        ],
        //"comments": "#4e4e4e",
        //"keywords": "#ffa600",
        //"types":"#646464",
        //"variables": "#ffffff",
        //"numbers":"#ffffff",
        //"functions": "#ffffff",
        //"strings": "#4e4e4e",
    },
    "workbench.statusBar.visible": false,
    "workbench.activityBar.visible": true,
    "workbench.editor.wrapTabs" : true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    //"workbench.editor.tabSizing": "shrink",
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-e>"
            ],
            "commands": [
                {
                    "command": "workbench.action.files.save"
                },
                {
                    "command": "extension.vim_escape"
                }
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    "vim.leader": "\\",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.tree.scanMode": "open files",
    "todo-tree.general.tagGroups": {
        "MGTODO": [
            "MGTODO",
            "mgtodo",
            "MGDO",
            "mgdo"
        ],
        "MGMAYBE" : ["MGMAYBE", "mgmaybe"],
        "MGASK":["MGASK", "mgask"],
        "MGNOTE": ["MGNOTE", "mgnote"]
    },
    "todo-tree.highlights.customHighlight": {
        "MGTODO": {
            "foreground": "black",
            "background": "#ffcc00",
            "type": "text-and-comment",
            "opacity": 75,
            "iconColour": "#ffffff"
        },
        "MGMAYBE": {
            "foreground": "black",
            "background": "#ffcc99",
            "type": "text-and-comment",
            "opacity": 75,
            "iconColour": "#ffffff"
        },
        "MGASK": {
            "foreground": "black",
            "background": "#26ff00",
            "type": "text-and-comment",
            "opacity": 75,
            "iconColour": "#ffffff"
        },
        "MGNOTE": {
            "foreground": "black",
            "background": "#00bfff",
            "type": "text-and-comment",
            "opacity": 75,
            "iconColour": "#ffffff"
        }
    },
    "todo-tree.general.tags": [
        //"TODO",
        "MGTODO",
        "mgtodo",
        "MGDO",
        "mgdo",
        "MGMAYBE",
        "mgmaybe",
        "MGASK",
        "mgask",
        "MGNOTE",
        "mgnote"
    ],
    "remote.SSH.remotePlatform": {
    },
    // Do not show inline git blame
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "window.menuBarVisibility": "hidden",
    "window.zoomLevel": 0,
    // Keep tab open when using the ctr+p menu
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "cmake.configureOnOpen": false,
    "editor.tabSize": 8,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off"
}

